{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask: Debug",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app/main.py",
            "console": "integratedTerminal",
            "env": {
                "FLASK_APP": "app/main.py",  
                "FLASK_ENV": "development" 
            },

            "envFile": "${workspaceFolder}/.env",
            "justMyCode": true
        }
    ]
}